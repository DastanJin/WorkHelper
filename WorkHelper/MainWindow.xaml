<Window x:Class="WorkHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="text_label" Content="Text" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="text" Margin="10,37,114,0" TextWrapping="Wrap" TextChanged="Text_TextChanged" Height="155" VerticalAlignment="Top"/>
        <Label x:Name="base64_label" Content="BASE 64" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="base64" Margin="10,228,10,50" TextWrapping="Wrap" TextChanged="Base64_TextChanged"/>
        <Button x:Name="FileLoadButton" Content="UPLOAD" Margin="0,37,10,0" VerticalAlignment="Top" Height="155" Click="FileLoadButton_Click" FontWeight="Bold" HorizontalAlignment="Right" Width="99"/>

    </Grid>
</Window>
